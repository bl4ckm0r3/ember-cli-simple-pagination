{{#if hasItems}}
  {{#if hasBlock}}
    {{yield
      (hash
        currentPage=currentPage
        totalPages=totalPages
        range=range
        onNext=(action 'onNext')
        onPrevious=(action 'onPrevious')
        onPage=(action 'onPage')
      )
    }}
  {{else}}
    <ul class="pagination-container" data-test={{hook 'pagination-container'}} role="navigation" aria-label="Pagination">
      {{#simple-pagination-item onClickItem=(action 'onPrevious') hook='pagination-previous' disabled=(eq currentPage 0) ariaLabel='Previous page' class='pagination-previous-item'}}
        {{#unless (eq currentPage 0)}}
          <a {{action 'onPrevious'}} aria-label="Previous page" data-test={{hook 'pagination-item-link-previous'}} class="pagination-item-link">
            Previous
          </a>
        {{else}}
          Previous
        {{/unless}}
      {{/simple-pagination-item}}
      {{#each range as |number|}}
        {{#unless (eq number null)}}
          {{simple-pagination-item onClickItem=(action 'onPage' number) current=(if (eq currentPage number) true false) ariaLabel=(concat "Page " (add number 1)) number=(add number 1)}}
        {{else}}
          <li data-test={{hook 'pagination-ellipsis'}} class="pagination-item ellipsis" aria-hidden="true"></li>
        {{/unless}}
      {{/each}}
      {{#simple-pagination-item onClickItem=(action 'onNext') hook='pagination-next' disabled=(gte currentPage (sub totalPages 1)) ariaLabel='Next page' class='pagination-next-item'}}
        {{#unless (gte currentPage (sub totalPages 1))}}
          <a {{action 'onNext'}} aria-label="Next page" data-test={{hook 'pagination-item-link-next'}} class="pagination-item-link">
            Next
          </a>
        {{else}}
          Next
        {{/unless}}
      {{/simple-pagination-item}}
    </ul>
  {{/if}}
{{/if}}
